@using Pachkoriya_HW09.Components;

@{
    ViewData["Title"] = "Пассажиры упорядочены по номеру места";
}

<main class="container">
    <section class="row">
        <article class="offset-1 col-10 bg-light">
            <h2 class="text-success text-center">Пассажиры упорядочены по номеру места</h2>
            <a class="btn btn-primary float-right" asp-controller="Bus" asp-action="Index">
                Назад
            </a>
            <br />
            <br />
            <h3 class="text-center text-dark">Данные автобуса</h3>
            <br />
            @await Component.InvokeAsync(nameof(BusData), new { sortPassengersBySeatNum = true })
        </article>
    </section>
</main>