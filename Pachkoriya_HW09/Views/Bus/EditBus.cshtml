@model Pachkoriya_HW09.Models.Bus

@{
    ViewData["Title"] = "Редактировать автобус";
}

<main class="container">
    <section class="row">
        <article class="offset-1 col-10 bg-light">
            <br />
            <form asp-action="EditBus">
                <h2 class="text-center">Редактировать автобус:</h2>
                <span asp-validation-for="GovernmentNumber" class="text-danger"></span><br />
                <div class="input-group mb-3 text-center">
                    <div class="input-group-prepend">
                        <label asp-for="GovernmentNumber" class="input-group-text" id="inputGroup-sizing-default"></label>
                    </div>
                    <input asp-for="GovernmentNumber" value="@Model.TicketPrice" class="form-control" />
                </div>
                <span asp-validation-for="Route" class="text-danger"></span><br />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label asp-for="Route" class="input-group-text" id="inputGroup-sizing-default"></label>
                    </div>
                    <input asp-for="Route" class="form-control" />
                </div>
                <span asp-validation-for="Driver" class="text-danger"></span><br />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label asp-for="Driver" class="input-group-text" id="inputGroup-sizing-default"></label>
                    </div>
                    <input asp-for="Driver" class="form-control" />
                </div>
                <span asp-validation-for="SeatsNumber" class="text-danger"></span><br />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label asp-for="SeatsNumber" class="input-group-text" id="inputGroup-sizing-default"></label>
                    </div>
                    <input asp-for="SeatsNumber" class="form-control" />
                </div>
                <span asp-validation-for="TicketPrice" class="text-danger"></span><br />
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <label asp-for="TicketPrice" class="input-group-text" id="inputGroup-sizing-default"></label>
                    </div>
                    <input asp-for="TicketPrice" class="form-control" />
                </div>
                <br />
                <input class="btn btn-success" type="submit" value="Сохранить" />
                <a class="btn btn-primary float-right" asp-controller="Bus" asp-action="Index">
                    Назад
                </a>
            </form>
            <br />
        </article>
    </section>
</main>
